{% if 'server' in group_names %}
  {% if cluster_init %}
    {% if ansible_host == hostvars[groups['master'][0]]['ansible_host'] | default(groups['master'][0]) %}
cluster-init: true
    {% else %}
server: "https://{{ k3s_api_server }}:{{ k3s_api_port }}"
    {% endif %}
token: "{{ hostvars[groups['server'][0]]['token'] | default(k3s_token) }}"
  {% endif %}
secrets-encryption: true
etcd-expose-metrics: true
{% else %}
server: "https://{{ k3s_api_server }}:{{ k3s_api_port }}"
token: "{{ hostvars[groups['server'][0]]['token'] | default(k3s_token) }}"
{% endif %}
